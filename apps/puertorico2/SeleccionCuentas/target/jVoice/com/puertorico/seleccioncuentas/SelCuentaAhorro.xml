<flow xmlns="http://www.springframework.org/schema/webflow"	
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"	
xsi:schemaLocation="http://www.springframework.org/schema/webflow
http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd"
parent="SeleccionCuentas/errorHandler"
start-state= "_jVoiceCheckInit" >

<on-start>
<evaluate expression="manageCuentas" result="flowScope.manageTexts"></evaluate>
<evaluate expression="text" result="flowScope.texto"></evaluate>

</on-start>


<action-state id="_jVoiceCheckInit">
	<evaluate expression="jVoiceArchData.initialized" />
		<transition on="no" to="_jVoiceInit"/>
		<transition to="outRobos"/>
	</action-state>

<view-state id="_jVoiceInit" view="_init" model="jVoiceArchData">
	<transition to="outRobos" >
		<set name="jVoiceArchData.initialized" value="true"/>
	</transition>
</view-state>
<end-state id="Final" view="#{flowProcessor.getRenderer().getView()}">
	<output name="result" value="callData.listaCuentas[lastInputResult.interpretation - 1]" />
</end-state>
<action-state id="outRobos">
	<on-entry>
		<evaluate expression="jVoiceArchOutput" result="flashScope.outRobos"></evaluate>
		<evaluate expression="jVoiceArchAudioItem" result="flashScope.outRobosaudioItems1"/><evaluate expression="jVoiceArchWording" result="flashScope.outRobosaudioItems1.wording"/>
		<set name="flashScope.outRobosaudioItems1.wording.text" value="'Para reportar robos o estravios presione asterisco'"/>
		<evaluate expression="flashScope.outRobos.audioItems.add(flashScope.outRobosaudioItems1)"/> 
	</on-entry>
	<evaluate expression="flowProcessor.process(flashScope.outRobos)"/>
	<transition to="Switch"/>
</action-state>


<action-state id="Switch">
	<evaluate expression="callData.listaCuentas.size == 1" />
	<transition on="yes" to="UnaCuenta"/>
	<transition to="manage_Texts"/>
</action-state>
<action-state id="manage_Texts">
   <evaluate expression="flowScope.manageTexts.manageTexts()"
   />
   

	 <transition to="inputNumCuenta"></transition>
	
</action-state>
<action-state id="inputNumCuenta">
	<on-entry>
		<evaluate expression="jVoiceArchInput" result="flashScope.inputNumCuenta"></evaluate>
		<set name="flashScope.inputNumCuenta.name" value="'inputNumCuenta'" />
		<set name="flashScope.inputNumCuenta.bargein" value="true" />
		<set name="flashScope.inputNumCuenta.maxAttempts" value="1" />
		<set name="flashScope.inputNumCuenta.maxNoInput" value="1" />
		<set name="flashScope.inputNumCuenta.maxNoMatch" value="1" />
		
		<evaluate expression="jVoiceArchGrammar" result="flashScope.grammar1" />
		<set name="flashScope.grammar1.src" value="'builtin:dtmf/digits'"/>
		<set name="flashScope.grammar1.mode" value="'dtmf'"/>
		<set name="flashScope.grammar1.module" value="'SeleccionCuentas'"/>
		<evaluate expression="flashScope.inputNumCuenta.grammars.add(flashScope.grammar1)" />
		
        <evaluate expression="jVoiceArchAudioItem" result="flashScope.inputNumCuentamainAudios1"/><evaluate expression="jVoiceArchWording" result="flashScope.inputNumCuentamainAudios1.wording"/>
        <set name="flashScope.inputNumCuentamainAudios1.wording.text" value="'' + texto.getTexto() + ''"/>
        <evaluate expression="flashScope.inputNumCuenta.mainAudios.add(flashScope.inputNumCuentamainAudios1)"/>
        <evaluate expression="jVoiceArchAudioItem" result="flashScope.inputNumCuentanoMatchAudios1"/><set name="flashScope.inputNumCuentanoMatchAudios1.src" value="locutionProvider.getAudioSrc(''puerto_rico-es-US-SAN-BC-NM'','SeleccionCuentas')"/>
        <evaluate expression="jVoiceArchWording" result="flashScope.inputNumCuentanoMatchAudios1.wording"/>
        <set name="flashScope.inputNumCuentanoMatchAudios1.wording.text" value="'La opci칩n que usted seleccion칩 no es v치lida.'"/>
        <evaluate expression="flashScope.inputNumCuenta.noMatchAudios.add(flashScope.inputNumCuentanoMatchAudios1)"/>
        <evaluate expression="jVoiceArchAudioItem" result="flashScope.inputNumCuentanoInputAudios1"/><set name="flashScope.inputNumCuentanoInputAudios1.src" value="locutionProvider.getAudioSrc(''puerto_rico-es-US-SAN-BC-NI'','SeleccionCuentas')"/>
        <evaluate expression="jVoiceArchWording" result="flashScope.inputNumCuentanoInputAudios1.wording"/>
        <set name="flashScope.inputNumCuentanoInputAudios1.wording.text" value="'No ha seleccionado una opci칩n.'"/>
        <evaluate expression="flashScope.inputNumCuenta.noInputAudios.add(flashScope.inputNumCuentanoInputAudios1)"/>
	</on-entry>
	<evaluate expression="flowProcessor.process(flashScope.inputNumCuenta)"/>			
	<transition to="render_inputNumCuenta"/>
</action-state>

<view-state id="render_inputNumCuenta" view="#{flowProcessor.getRenderer().getView()}" model="lastInputResult">
	<transition on="match" to="hayMasCuentas"/>
</view-state>

<action-state id="hayMasCuentas">
	<evaluate expression="lastInputResult.interpretation == '6'" />
	<transition on="yes" to="manage_Texts"/>
	<transition to="Final"/>
</action-state>
<end-state id="UnaCuenta" view="#{flowProcessor.getRenderer().getView()}">
	<output name="result" value="callData.listaCuentas[0]" />
</end-state>
</flow> 
